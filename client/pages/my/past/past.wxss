/* pages/past/past.wxss */
.swiper-tab{ 
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 70rpx;}  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 50%;  
    color: #777777;  
}  
.on{ color: #5cadff;  
    border-bottom: 5rpx solid #5c9dff;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: center;  
} 
.past{
   display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
} 
.past-item{
  width: 700rpx;
  background: #ffffff;
  padding: 25rpx 25rpx 25rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.past-item .past-content{
  flex: 4;
  text-align: left;
  color: #818A8F;
  font-size: 28rpx;
  padding: 4rpx 0 8rpx 0;
}
.past-item .past-content .act-name{
  font-size: 28rpx;
  color: #000000;
  text-align: left;
}
.past-item .past-content .act-time{
  flex: 1;
  font-size: 24rpx;
  float: right;
  vertical-align: text-bottom;
}
.past-empty {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #8a8a8a;
  font-size: 24rpx;
}
.past-empty .empty-image {
  width: 150rpx;
  height: 150rpx;
}

.list{
  position: relative;
	overflow: hidden;
	width: 100%;
	padding: 0 20rpx 0 0;
	border-top: 10rpx solid #eeeeee;
	background-color: #fff;
  margin-bottom: 2rpx;
}

.list-img{
  position: relative;
	float: left;
  width: 240rpx;
}

.list-img .video-img{
	width: 240rpx;
	height: 240rpx;
}

.list-detail{
	position: absolute;
  margin-top: 15rpx;
  margin-left: 270rpx;
  margin-right: 20rpx;
}

.list-title text{
	word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
	font-size: 34rpx;
  color: #333;
	font-weight: bold;
  line-height: 120%;
}
.in-title{
  font-size: 32rpx;
  color:#404040;
  margin-left: 20rpx;
  line-height: 60rpx;
  padding-left:20rpx;
  border-left: 10rpx solid #93b9ff;
  border-bottom: 1rpx solid #eeeeee;
}
.in-info{
  font-size: 26rpx;
  color:#606060;
  line-height: 40rpx;
  padding:5rpx 10rpx 10rpx 15rpx;
}
.list-tag{
    right: 0;
    bottom: 0;
    height: 20rpx;
}
.list-tag view.state{
   display: block;
    font-size: 24rpx;
    color: #81aaf7;
    width: 100rpx;
    padding: 0rpx;
    border: 2rpx solid #93b9ff;
    border-radius: 2rpx;
    text-align: center;
    margin-right: 40rpx;
    margin-bottom: 20rpx;
    position: absolute;
    right: 0;
    bottom: 0;
}

.list-tag .join{
	font-size: 26rpx;
  line-height: 120%;
  color: #888;
  position: absolute;
  display: inline;
  margin: 30rpx;
  left:0;
}

.list-icon{
margin: 0 0 -25rpx -10rpx;
  height: 40rpx;
  width: 40rpx;
}

.list-tag .list-num{
	font-size: 32rpx;
  color: #ff6666;
}

.list-info{
	font-size: 26rpx;
  color: #bbb;
  line-height: 110%;
  font-weight: normal;
	margin-top: 80rpx;
}
.past-empty {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #8a8a8a;
  font-size: 24rpx;
  width:100%;
  height:75%;
  position:  absolute
}
.past-empty .empty-image {
  width: 150rpx;
  height: 150rpx;
}
.ui_uploader_cell {
    width: 100%;
    padding: 40rpx;
    box-sizing: border-box;
}
.ui_uploader_item{
    float: left;
    position: relative;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    width: 165rpx;
    height: 165rpx;
}
.ui_uploader {
    float: left;
    position: relative;
    margin-right: 25rpx;
    margin-bottom: 25rpx;
    width: 165rpx;
    height: 165rpx;
    border: 2rpx solid #d9d9d9;
    box-sizing: border-box;
}

.ui_uploader:before {
    content: " ";
    position: absolute;
    width: 4rpx;
    height: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}

.ui_uploader:after {
    content: " ";
    position: absolute;
    height: 4rpx;
    width: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}
.ui_uploader_item_icon{
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    background: #fff;
    border-radius: 50%;
}
.ui_uploader_item image {
    width: 100%;
    height: 100%;
}