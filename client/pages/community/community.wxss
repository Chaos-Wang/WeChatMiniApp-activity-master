page{

	height: 100%;

	background-color: #efeff4;

}

scroll-view{

  height: 100%;

}

.swiper{
  top: 0rpx;
  width: 100%;
  height: 480rpx;	
}
.swiper swiper{
	height: 480rpx;
}
.slide-image{
  width: 100%;
}
.list{
  position: relative;
	overflow: hidden;
	width: 100%;
	padding: 0 20rpx 0 0;
	border-top: 10rpx solid #eeeeee;
	background-color: #fff;
  margin-bottom: 2rpx;
}

.list-img{
  position: relative;
	float: left;
  width: 240rpx;
}

.list-img .video-img{
	width: 240rpx;
	height: 240rpx;
}

.list-detail{
	position: absolute;
  margin-top: 15rpx;
  margin-left: 270rpx;
  margin-right: 20rpx;
}

.list-title text{
	word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
	font-size: 34rpx;
  color: #333;
	font-weight: bold;
  line-height: 120%;
}
.in-title{
  font-size: 32rpx;
  color:#404040;
  margin-left: 20rpx;
  line-height: 60rpx;
  padding-left:20rpx;
  border-left: 10rpx solid #93b9ff;
  border-bottom: 1rpx solid #eeeeee;
}
.in-info{
  font-size: 26rpx;
  color:#606060;
  line-height: 40rpx;
  padding:5rpx 10rpx 10rpx 15rpx;
}
.list-tag{
    right: 0;
    bottom: 0;
    height: 20rpx;
}
.list-tag view.state{
   display: block;
    font-size: 24rpx;
    color: #81aaf7;
    width: 100rpx;
    padding: 0rpx;
    border: 2rpx solid #93b9ff;
    border-radius: 2rpx;
    text-align: center;
    margin-right: 40rpx;
    margin-bottom: 20rpx;
    position: absolute;
    right: 0;
    bottom: 0;
}

.list-tag .join{
	font-size: 26rpx;
  line-height: 120%;
  color: #888;
  position: absolute;
  display: inline;
  margin: 30rpx;
  left:0;
}

.list-icon{
margin: 0 0 -25rpx -10rpx;
  height: 40rpx;
  width: 40rpx;
}

.list-tag .list-num{
	font-size: 32rpx;
  color: #ff6666;
}

.list-info{
	font-size: 26rpx;
  color: #bbb;
  line-height: 110%;
  font-weight: normal;
	margin-top: 80rpx;
}
.past-empty {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #8a8a8a;
  font-size: 24rpx;
  width:100%;
  height:100%;
  position:  absolute
}
.past-empty .empty-image {
  width: 150rpx;
  height: 150rpx;
}