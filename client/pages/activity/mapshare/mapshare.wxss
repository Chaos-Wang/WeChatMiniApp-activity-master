.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 100rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 0rpx;
}
 
.placeBox{
  width: 100%;
  height: 100rpx;
}
 
.placeViewLt{
  display: inline-block;
  width: 620rpx;
  height: 140rpx;
 
  vertical-align: middle;
}
 
.viewTitle{
  display: inline-block;
  font-size: 34rpx;
  color: #222;
  margin-left: 25rpx;
  font-weight: bold;
  padding-top: 34rpx;
}

.viewAvator{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%; 
  margin-left: 10rpx;
}
 
.placeViewRt{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  padding-top: 6rpx;
  vertical-align: middle;
}
 
.indexIcon{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin-left: 40rpx;
  vertical-align: middle;
}

.btn-area{ width: 100%;}
.btn_no{ float:left;width: 40%; margin-left: 5%;border: 0px;}
.btn_ok{ float:left;width: 40%; margin-left: 10%;margin-right: 5%; border: 0px;}
.start-record {
  box-sizing: border-box;
  position: fixed;
  background-color: #5cadff;
  bottom: 40rpx;
  right: 36rpx;
  padding: 10rpx 36rpx;
  border-radius: 48rpx;
  box-shadow: rgba(0, 0, 0, 0.2) 0px 3rpx 20rpx;
  display: flex;
  align-items: center;
  width: 300rpx;
}

.start-record > image {
  width: 42rpx;
  height: 42rpx;
}

.start-record > .desc {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 10rpx;
  padding-bottom: 4rpx;
}