/* pages/share/share.wxss */
.uploadimage{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.start-record {
  box-sizing: border-box;
  position: fixed;
  background-color: #1565c0;
  bottom: 8%;
  right: 36rpx;
  padding: 16rpx 30rpx;
  border-radius: 48rpx;
  box-shadow: rgba(0, 0, 0, 0.2) 0px 3rpx 20rpx;
  display: flex;
  align-items: center;
}
.start-record > .desc {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 10rpx;
  padding-bottom: 4rpx;
}
.ui_uploader_cell {
    width: 100%;
    padding: 40rpx;
    box-sizing: border-box;
}
.ui_uploader_item{
    float: left;
    position: relative;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    width: 165rpx;
    height: 165rpx;
}
.ui_uploader {
    float: left;
    position: relative;
    margin-right: 25rpx;
    margin-bottom: 25rpx;
    width: 165rpx;
    height: 165rpx;
    border: 2rpx solid #d9d9d9;
    box-sizing: border-box;
}

.ui_uploader:before {
    content: " ";
    position: absolute;
    width: 4rpx;
    height: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}

.ui_uploader:after {
    content: " ";
    position: absolute;
    height: 4rpx;
    width: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}
.ui_uploader_item_icon{
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    background: #fff;
    border-radius: 50%;
}
.ui_uploader_item image {
    width: 100%;
    height: 100%;
}