.container{
  background-color: white;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.additem{
  width: 100%;
}
.add{
  display: flex;
  flex-direction: row;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #eee;
  margin: 30rpx 30rpx 10rpx;
  padding: 20rpx;
}
.plus{
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
  padding-top: 8rpx; 
}
.InputAdd{
  padding-left: 20rpx;
  font-size: 28rpx;
}
.info{
  font-size: 30rpx;
  padding: 0 20rpx;
  vertical-align: center;
  margin: 4rpx;
}
.infos{
  width: 100%;
}
.info-item{
  display: flex;
  position: relative;
  flex-direction: row;
  padding: 20rpx;
  background-color: #45A1FF;
  border: 10rpx solid #fff;
  border-radius: 20rpx;
}
.itemdescriptiont{
  flex: 1;
  font-size: 30rpx;
  color: white;
}

.itemremove{
  position: absolute;
  top: calc(50% - 10px); 
  right: 1vh;
  cursor: pointer;
}