/* pages/bill/bill.wxss */
.header {
  display: flex;
  margin: 24rpx 40rpx;
  align-items: center;
  font-size: 44rpx;
  font-weight: bold;
  line-height: 48rpx;
  min-height: 48rpx;
  vertical-align: text-top;
}

.header > .settle {
   width: 50rpx;
  height: 50rpx;
  align-self: flex-end;
  margin-left: auto;
  padding-left: 12px;
}

.subtitle {
  display: flex;
  align-content: center;
  font-size: 32rpx;
  color: #5cadff;
  font-weight: bold;
  margin: 16rpx 40rpx;
  margin-top: 40rpx;
}

.subtitle .sheet {
  width: 40rpx;
  height: 40rpx;
}

.total{
  border-bottom: 1rpx solid rgba(210, 190, 190, 0.18);
  font-size: 28rpx;
  padding-left: 55rpx;
  color: #666;
  display: flex;
  flex-direction:column; 
}
.total-detail{
  padding-left: 5rpx;
  color: rgb(243, 152, 0);
  font-size:28rpx; 
}
.start-record {
  box-sizing: border-box;
  position: fixed;
  background-color: #5cadff;
  bottom: 8%;
  right: 36rpx;
  padding: 16rpx 30rpx;
  border-radius: 48rpx;
  box-shadow: rgba(0, 0, 0, 0.2) 0px 3rpx 20rpx;
  display: flex;
  align-items: center;
}

.start-record > image {
  width: 42rpx;
  height: 42rpx;
}

.start-record > .desc {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 10rpx;
  padding-bottom: 4rpx;
}


.record-container {
  margin: 0 40rpx;
  margin-bottom: 160rpx;
}

.record {
  border-bottom: 1rpx solid rgba(25, 118, 210, 0.08);
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}

.record-duration {
  flex-shrink: 0;
  margin-left: auto;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.record-duration > .num {
  font-weight: bold;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #5cadff;
}

.unit {
  font-size: 24rpx;
}

.record-content > .tags {
  font-size: 24rpx;
  color: #777;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.record-content > .record-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  margin-right: 16rpx;
}

.record-empty {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #aaa;
  font-size: 24rpx;
}
.record-empty .empty-image {
  width: 150rpx;
  height: 150rpx;
}